@model  Inspection.Web.Models.mAINPROGRESSModel
@using Inspection.Web.Service
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">
                <span id="ContentPlaceHolder1_lblaction"></span>&nbsp; Inward Data
            </h4>
        </div>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="live-preview">
            <div class="row gy-4">
                <div class="col-xxl-2 col-md-6">
                    <div>
                        <label>Inward Date</label>
                        @Html.TextBoxFor(model => model._INWARD.InwardDate, new { @disabled = "disabled", @class = "aspNetDisabled form-control" })
                    </div>
                </div>
                <div class="col-xxl-2 col-md-6">
                    <div>
                        <label>Inward Time</label>
                        @Html.TextBoxFor(model => model._INWARD.InwardTime, new { @disabled = "disabled", @class = "aspNetDisabled form-control" })
                    </div>
                </div>
                <div class="col-xxl-2 col-md-6">
                    <div>
                        <label>Job No</label>
                        @Html.TextBoxFor(model => model._INWARD.JobNo, new { @disabled = "disabled", @class = "aspNetDisabled form-control job-input" })
                    </div>
                </div>
                <div class="col-xxl-2 col-md-6">
                    <div>
                        <label>Part No</label>
                        @Html.TextBoxFor(model => model._INWARD.Partno, new { @disabled = "disabled", @class = "aspNetDisabled form-control" })
                    </div>
                </div>
                <div class="col-xxl-2 col-md-6">
                    <div>
                        <label>Stage</label>
                        @Html.TextBoxFor(model => model._INWARD.Stage, new { @disabled = "disabled", @class = "aspNetDisabled form-control" })
                    </div>
                </div>
                <div class="col-xxl-1 col-md-6">
                    <div>
                        <label>Epicor Rev</label>
                        @Html.TextBoxFor(model => model._INWARD.ERev, new { @disabled = "disabled", @class = "aspNetDisabled form-control" })
                    </div>
                </div>
                <div class="col-xxl-1 col-md-6">
                    <div>
                        <label>Actual Rev</label>
                        @Html.TextBoxFor(model => model._INWARD.ActualRev, new { @disabled = "disabled", @class = "aspNetDisabled form-control" })
                    </div>
                </div>
                <div class="col-xxl-2 col-md-6">
                    <div>
                        <label>Qty</label>
                        @Html.TextBoxFor(model => model._INWARD.Qty, new { @disabled = "disabled", @class = "aspNetDisabled form-control" })
                    </div>
                </div>
                <div class="col-xxl-2 col-md-6">
                    <div>
                        <label>Stage</label>
                        @Html.TextBoxFor(model => model._INWARD.Stage, new { @disabled = "disabled", @class = "aspNetDisabled form-control" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br>
</div>
<br>
<div class="row">
    <div class="col-12">
        @if (Model != null)
        {
            var ins = " Inspection";
            <div class="alert alert-warning" role="alert">
                <strong> @Model._INWARD.currentstage  @ins </strong>
            </div>
        }

    </div>
</div>



@section styles{
    <!-- Sweet Alert css-->
    <link href="~/Content/assets/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" type="text/css" />

    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="~/Content/assets/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" type="text/css" />


    @Scripts.Render("~/bundles/jqueryval")

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

    <script src="~/Content/assets/libs/prismjs/prism.js"></script>

    <script src="~/Content/assets/js/app.js"></script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!--jquery cdn-->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <!--select2 cdn-->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script src="~/Content/assets/js/pages/select2.init.js"></script>

    <!-- App js -->
    <script src="~/Content/assets/js/app.js"></script>

    <!-- Sweet Alerts js -->
    <script src="~/Content/assets/libs/sweetalert2/sweetalert2.min.js"></script>

    <!-- Sweet alert init js-->
    <script src="~/Content/assets/js/pages/sweetalerts.init.js"></script>

    <!-- App js -->
    <script src="~/Content/assets/js/app.js"></script>

}
@{
    int Count = 1;
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("AddData", "visualinspection", FormMethod.Post))
                {
                    <div class="live-preview">
                        @Html.HiddenFor(model => Model._INWARD.id)
                        @Html.HiddenFor(model => Model._INWARD.JobNo)
                        @Html.HiddenFor(model => Model._INWARD.Partno)
                        @Html.HiddenFor(model => Model._INWARD.Stage)
                        @Html.HiddenFor(model => Model._INWARD.Status)
                        <div class="row align-items-center g-3">
                            <div class="col-lg-2">
                                <div>
                                    @Html.LabelFor(model => model._submodel.inspectiondate, "Inspection Date", new { @class = "form-label" })
                                    @Html.EditorFor(model => model._submodel.inspectiondate, new { htmlAttributes = new { @class = "form-control", @type = "date", @placeholder = "Select Date", @required = "required" } })
                                </div>
                            </div>
                            <div class="col-lg-2">
                                <div>
                                    @Html.LabelFor(model => model._submodel.StartTime, "Start Date", new { @class = "form-label" })
                                    @Html.EditorFor(model => model._submodel.StartTime, new { htmlAttributes = new { @class = "form-control", @type = "time", @placeholder = "Select Time", @required = "required" } })
                                </div>
                            </div>
                            <div class="col-lg-2">
                                @Html.LabelFor(model => model._submodel.InspectionBy, new { @class = "form-label" })
                                @{
                                    var inspectionservice = new Inspection.Web.Scripts.Inspectionservice();
                                    var userSelectList = inspectionservice.Getuser();
                                }

                                @Html.DropDownListFor(model => model._submodel.InspectionBy, new SelectList(userSelectList, "Value", "Text"), "Select", new { @class = "form-select ", id = "disabledInput" })
                                @Html.ValidationMessageFor(model => model._submodel.InspectionBy, "", new { @class = "text-danger" })
                            </div>
                            <div class="col" style="margin-left:684px; margin-top:24px">
                                <button type="submit" class="btn btn-success " id="add-btn">Add</button>
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card" id="leadsList">
            <div class="card-body">
                <div>
                    <div class="table-responsive table-card">
                        <table class="table align-middle ccssb" id="customerTables">
                            <thead class="table-light">
                                <tr>
                                    <th class="" data-sort="name">Sr No.</th>
                                    <th class="" data-sort="leads_score">Inspection Date</th>
                                    <th class="" data-sort="phone">Start Time</th>
                                    <th class="" data-sort="location">End Time</th>
                                    <th class="" data-sort="tags">Inspection  Qty</th>
                                    <th class="" data-sort="date">Ins By</th>
                                    <th class="" data-sort="action">Action</th>
                                </tr>
                            </thead>
                            <tbody class="list form-check-all">

                                @if (Model != null)
                                {
                                    if (Model.SUBMODEL != null && Model.SUBMODEL.Count > 0)
                                    {

                                        foreach (var item in Model.SUBMODEL)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => Count)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.inspectiondate)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.StartTime)
                                                </td>
                                                @if (item.EndTime != null && item.InspectedQty != null)
                                                {
                                                    <td>
                                                        @Html.TextBoxFor(model => item.EndTime, new { @class = "aspNetDisabled form-control", @type = "time", })
                                                    </td>
                                                    <td>
                                                        @Html.TextBoxFor(model => item.InspectedQty, new { @class = "aspNetDisabled form-control" })
                                                    </td>
                                                }
                                                else
                                                {
                                                    <td>
                                                        @Html.TextBoxFor(model => item.EndTime, new { @class = "aspNetDisabled form-control  endtime-input", @type = "time", })
                                                    </td>
                                                    <td>
                                                        @Html.TextBoxFor(model => item.InspectedQty, new { @class = "aspNetDisabled form-control quantity-input" })
                                                    </td>
                                                }
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.InspectionBy)
                                                </td>
                                                <td>
                                                    @if (item.EndTime != null && item.InspectedQty != null)
                                                    {
                                                        <button type="submit" class="btn rounded-pill btn-danger waves-effect waves-light" disabled>Close</button>
                                                    }
                                                    else
                                                    {
                                                        <button type="button" id="openbtn" class="btn rounded-pill btn-success waves-effect waves-light openbtn">Open</button>
                                                    }
                                                    <button type="submit" class="btn rounded-pill btn-danger waves-effect waves-light closebtn" onclick="getendidqty(@item.id)">Close</button>
                                                </td>
                                            </tr>

                                            Count++;
                                        }
                                    }
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
            <!--end col-->
        </div>

        <!--end row-->

        <script>
    $(document).ready(function () {
        $(".endtime-input").hide();
        $(".quantity-input").hide();
        $(".closebtn").hide();

        $(document).on('click', '.openbtn', function () {
            var row = $(this).closest('tr');
            row.find('.endtime-input').show();
            row.find('.quantity-input').show();
            row.find('.openbtn').hide();
            row.find('.closebtn').show();
        });



            var successMessage = '@TempData["SuccessMessage"]';
             var WarningMessage = '@TempData["WarningMessage"]';

        if (successMessage) {
            Swal.fire({
                html: '<div class="mt-3">' +
                    '<lord-icon src="https://cdn.lordicon.com/lupuorrc.json" trigger="loop" colors="primary:#0ab39c,secondary:#405189" style="width:120px;height:120px"></lord-icon>' +
                    '<div class="mt-4 pt-2 fs-15">' +
                    '<h4>Well done !</h4>' +
                    '<p class="text-muted mx-4 mb-0">' + successMessage + '</p>' +
                    '</div>' +
                    '</div>',
                showCancelButton: true,
                showConfirmButton: false,
                cancelButtonClass: 'btn btn-primary w-xs mb-1',
                cancelButtonText: 'Back',
                buttonsStyling: false,
                showCloseButton: true
            });
        }
        else if (WarningMessage) {

            Swal.fire({
                html: '<div class="mt-3">' +
                    '<lord-icon src="https://cdn.lordicon.com/tdrtiskw.json" trigger="loop" colors="primary:#f06548,secondary:#f7b84b" style="width:120px;height:120px"></lord-icon>' +
                    '<div class="mt-4 pt-2 fs-15">' +
                    '<h4>Oops...! Something went Wrong !</h4>' +
                    '<p class="text-muted mx-4 mb-0">' + WarningMessage + '</p>' +
                    '</div>' +
                    '</div>',
                showCancelButton: true,
                showConfirmButton: false,
                cancelButtonClass: 'btn btn-primary w-xs mb-1',
                cancelButtonText: 'Dismiss',
                buttonsStyling: false,
                showCloseButton: true
            })

        }
    });

        </script>
        <script>
            function getendidqty(id) {

                var endt = $('.endtime-input').val();
                var qty = $('.quantity-input').val();

                $.ajax({
                    url: '/visualinspection/ENDTIMEQTY?id=' + id + '&endtime=' + endt + '&qty=' + qty,
                    type: 'POST',
                    success: function (response) {
                        location.reload();
                    },
                    error: function (error) {
                        // Handle error if needed
                        console.error(error);
                    }
                });
            }

        </script>
        @section scripts{
            <!-- list.js min js -->
            <script src="~/Content/assets/libs/list.js/list.min.js"></script>
            <script src="~/Content/assets/libs/list.pagination.js/list.pagination.min.js"></script>

            <!-- Sweet Alerts js -->
            <script src="~/Content/assets/libs/sweetalert2/sweetalert2.min.js"></script>
            <!-- crm leads init -->
            <script src="~/Content/assets/js/pages/crm-leads.init.js"></script>

            <!-- App js -->
            <script src="~/Content/assets/js/app.js"></script>
        }

