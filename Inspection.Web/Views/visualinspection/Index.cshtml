@model  Inspection.Web.Models.InwardDataModel
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">
                <span id="ContentPlaceHolder1_lblaction"></span>&nbsp; Inward Data
            </h4>
        </div>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="live-preview">

            <div class="row gy-4">
                <div class="col-xxl-2 col-md-6">
                    <div>
                        <label>Inward Date</label>
                        @Html.TextBoxFor(model => model.InwardDate, new { @disabled = "disabled", @class = "aspNetDisabled form-control" })
                    </div>
                </div>
                <div class="col-xxl-2 col-md-6">
                    <div>
                        <label>Job No</label>
                        @Html.TextBoxFor(model => model.InwardTime, new { @disabled = "disabled", @class = "aspNetDisabled form-control" })
                    </div>
                </div>
                <div class="col-xxl-2 col-md-6">
                    <div>
                        <label>Part No</label>
                        @Html.TextBoxFor(model => model.JobNo, new { @disabled = "disabled", @class = "aspNetDisabled form-control" })
                    </div>
                </div>
                <div class="col-xxl-2 col-md-6">
                    <div>
                        <label>Part No</label>
                        @Html.TextBoxFor(model => model.Partno, new { @disabled = "disabled", @class = "aspNetDisabled form-control" })
                    </div>
                </div>
                <div class="col-xxl-2 col-md-6">
                    <div>
                        <label>Stage</label>
                        @Html.TextBoxFor(model => model.Stage, new { @disabled = "disabled", @class = "aspNetDisabled form-control" })
                    </div>
                </div>
                <div class="col-xxl-1 col-md-6">
                    <div>
                        <label>Epicor Rev</label>
                        @Html.TextBoxFor(model => model.ERev, new { @disabled = "disabled", @class = "aspNetDisabled form-control" })
                    </div>
                </div>
                <div class="col-xxl-1 col-md-6">
                    <div>
                        <label>Actual Rev</label>
                        @Html.TextBoxFor(model => model.ActualRev, new { @disabled = "disabled", @class = "aspNetDisabled form-control" })
                    </div>
                </div>
                <div class="col-xxl-2 col-md-6">
                    <div>
                        <label>Qty</label>
                        @Html.TextBoxFor(model => model.Qty, new { @disabled = "disabled", @class = "aspNetDisabled form-control" })
                    </div>
                </div>
            </div>

        </div>
    </div>
    <br>
</div>
<br>
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">
                @if (Model != null)
                {
                    <span id="ContentPlaceHolder1_lblaction">0</span> @Model.currentstage
                }

            </h4>
        </div>
    </div>
</div>

@{
    ViewBag.Title = "Leads";
    ViewBag.pTitle = "Leads";
    ViewBag.pageTitle = "CRM";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <!-- Sweet Alert css-->
    <link href="~/Content/assets/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" type="text/css" />
}
@{ 
    int Count = 1;
}
<div class="row">
    <div class="col-lg-12">
        <div class="card" id="leadsList">
            <div class="card-header border-0">

                <div class="row g-4 align-items-center">
                    <div class="col-sm-3">
                    </div>
                    <div class="col-sm-auto ms-auto">
                        <div class="hstack gap-2">
                            <button class="btn btn-soft-danger" id="remove-actions" onClick="deleteMultiple()"><i class="ri-delete-bin-2-line"></i></button>
                            <button type="button" class="btn btn-success add-btn"
                                    data-bs-toggle="modal" id="create-btn"
                                    data-bs-target="#showModal">
                                <i class="ri-add-line align-bottom me-1"></i> Add Leads
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div>
                    <div class="table-responsive table-card">
                        <table class="table align-middle" id="customerTable">
                            <thead class="table-light">
                                <tr>
                                    <th class="" data-sort="name">Job Num</th>
                                    <th class="" data-sort="company_name">Part Num</th>
                                    <th class="" data-sort="leads_score">Ins Date</th>
                                    <th class="" data-sort="phone">Start Time</th>
                                    <th class="" data-sort="location">End Time</th>
                                    <th class="" data-sort="tags">Ins Qty</th>
                                    <th class="" data-sort="date">Ins By</th>
                                    <th class="" data-sort="action">Accept Qty</th>
                                    <th class="" data-sort="action">Reject Qty</th>
                                    <th class="" data-sort="action">Reject Qty</th>
                                </tr>
                            </thead>
                            <tbody class="list form-check-all">
                                @foreach (var item in Model._submodels)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => Count)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.inspectiondate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.StartTime)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EndTime)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.InspectedQty)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.User)
                                        </td>
                                        @*<td>
                                            @Html.DisplayFor(modelItem => item.)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Qty)
                                        </td>*@
                                    </tr>

                                    Count++;
                                }
                            </tbody>
                        </table>
                        <div class="noresult" style="display: none">
                            <div class="text-center">
                                <lord-icon src="https://cdn.lordicon.com/msoeawqm.json"
                                           trigger="loop" colors="primary:#121331,secondary:#08a88a"
                                           style="width:75px;height:75px">
                                </lord-icon>
                                <h5 class="mt-2">Sorry! No Result Found</h5>
                                <p class="text-muted mb-0">
                                    We've searched more than 150+ leads We
                                    did not find any
                                    leads for you search.
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-end mt-3">
                        <div class="pagination-wrap hstack gap-2">
                            <a class="page-item pagination-prev disabled" href="#">
                                Previous
                            </a>
                            <ul class="pagination listjs-pagination mb-0"></ul>
                            <a class="page-item pagination-next" href="#">
                                Next
                            </a>
                        </div>
                    </div>
                </div>

                <!--end modal-->
                <!-- Modal -->
                <div class="modal fade zoomIn" id="deleteRecordModal" tabindex="-1"
                     aria-labelledby="deleteRecordLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close" id="btn-close"></button>
                            </div>
                            <div class="modal-body p-5 text-center">
                                <lord-icon src="https://cdn.lordicon.com/gsqxdxog.json"
                                           trigger="loop" colors="primary:#405189,secondary:#f06548"
                                           style="width:90px;height:90px"></lord-icon>
                                <div class="mt-4 text-center">
                                    <h4 class="fs-semibold">You are about to delete a lead ?</h4>
                                    <p class="text-muted fs-14 mb-4 pt-1">
                                        Deleting your lead will
                                        remove all of your information from our database.
                                    </p>
                                    <div class="hstack gap-2 justify-content-center remove">
                                        <button class="btn btn-link link-success fw-medium text-decoration-none" id="deleteRecord-close"
                                                data-bs-dismiss="modal">
                                            <i class="ri-close-line me-1 align-middle"></i>
                                            Close
                                        </button>
                                        <button class="btn btn-danger" id="delete-record">
                                            Yes,
                                            Delete It!!
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal fade" id="showModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    @Html.Partial("_SubIndex",Model)
                </div>
            </div>
        </div>
    </div>
    <!--end col-->
</div>

<!--end row-->

@section scripts{
    <!-- list.js min js -->
    <script src="~/Content/assets/libs/list.js/list.min.js"></script>
    <script src="~/Content/assets/libs/list.pagination.js/list.pagination.min.js"></script>

    <!-- Sweet Alerts js -->
    <script src="~/Content/assets/libs/sweetalert2/sweetalert2.min.js"></script>
    <!-- crm leads init -->
    <script src="~/Content/assets/js/pages/crm-leads.init.js"></script>

    <!-- App js -->
    <script src="~/Content/assets/js/app.js"></script>
}

