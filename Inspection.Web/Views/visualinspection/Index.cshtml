<script>
    $(document).ready(function () {
        $(".endtime-input").hide();
        $(".quantity-input").hide();
        $(".closebtn").hide();

        $(document).on('click', '.openbtn', function () {
            var row = $(this).closest('tr');
            row.find('.endtime-input').show();
            row.find('.quantity-input').show();
            row.find('.openbtn').hide();
            row.find('.closebtn').show();
        });

        $(document).on('click', '.closebtn', function (e) {
            e.preventDefault();
            var form = $('.ccssb');

            var row = $(this).closest('tr');
            var endTimeValue = row.find('.endtime-input').val();
            var inspectedQtyValue = row.find('.quantity-input').val();
            var jobValue = row.find('.job-input').val();

            // Set values in hidden fields (assuming you have hidden fields in the form)
            $('#EndTime').val(endTimeValue);
            $('#InspectedQty').val(inspectedQtyValue);
            $('#JobNo').val(jobValue);
            form.submit();
        });
    });
</script>
