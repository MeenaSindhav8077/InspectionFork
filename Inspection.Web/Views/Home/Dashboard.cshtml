<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inspection Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
   
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Inspection Dashboard</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="#">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Reports</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Settings</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid mt-4">
        <div class="row mb-4">
            <div class="col-md-3">
                <label for="startDate" class="form-label">Start Date</label>
                <input type="date" id="startDate" class="form-control">
            </div>
            <div class="col-md-3">
                <label for="endDate" class="form-label">End Date</label>
                <input type="date" id="endDate" class="form-control">
            </div>
            <div class="col-md-3">
                <label for="fieldType" class="form-label">Field Type</label>
                <select id="fieldType" class="form-select">
                    <option value="all">All</option>
                    <option value="inspection">Inspection</option>
                    <option value="rework">Rework</option>
                    <option value="sorting">Sorting</option>
                </select>
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button class="btn btn-primary w-100">Filter</button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <div class="summary-card green-card">
                    <h5>Total Inspection Time</h5>
                    <h3>120 hours</h3>
                </div>
            </div>
            <div class="col-md-3">
                <div class="summary-card yellow-card">
                    <h5>Total Rework Time</h5>
                    <h3>45 hours</h3>
                </div>
            </div>
            <div class="col-md-3">
                <div class="summary-card red-card">
                    <h5>Total Sorting Time</h5>
                    <h3>30 hours</h3>
                </div>
            </div>
            <div class="col-md-3">
                <div class="summary-card blue-card">
                    <h5>Avg Deviation Waiting</h5>
                    <h3>15 minutes</h3>
                </div>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Inspection Time Trend</div>
                    <div class="card-body">
                        <canvas id="inspectionTrend"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Category Comparison</div>
                    <div class="card-body">
                        <canvas id="categoryComparison"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">Detailed Data</div>
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Inspection Type</th>
                                    <th>Start Time</th>
                                    <th>End Time</th>
                                    <th>Duration</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>Visual Inspection</td>
                                    <td>2024-12-23 08:00</td>
                                    <td>2024-12-23 10:00</td>
                                    <td>2 hours</td>
                                    <td><span class="badge bg-success">Completed</span></td>
                                </tr>
                                <tr>
                                    <td>2</td>
                                    <td>Rework Inspection</td>
                                    <td>2024-12-23 11:00</td>
                                    <td>2024-12-23 13:00</td>
                                    <td>2 hours</td>
                                    <td><span class="badge bg-warning">In Progress</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        const ctx1 = document.getElementById('inspectionTrend').getContext('2d');
        new Chart(ctx1, {
            type: 'line',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May'],
                datasets: [{
                    label: 'Inspection Time',
                    data: [10, 20, 30, 40, 50],
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 2
                }]
            },
            options: { responsive: true }
        });

        const ctx2 = document.getElementById('categoryComparison').getContext('2d');
        new Chart(ctx2, {
            type: 'bar',
            data: {
                labels: ['Inspection', 'Rework', 'Sorting'],
                datasets: [{
                    label: 'Hours',
                    data: [120, 45, 30],
                    backgroundColor: ['#28a745', '#ffc107', '#dc3545']
                }]
            },
            options: { responsive: true }
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
