@model  List<Inspection.Web.DataBase.Final_Inspection_Data>

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    int Count = 1;
}

@section styles{
    <!--datatable css-->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" />
    <!--datatable responsive css-->
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.9/css/responsive.bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.0/xlsx.full.min.js"></script>
}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            @if (Model.Count != 0)
            {
                <div class="card-header">
                    <h4 class="card-title mb-0">@Model[0].Inspection_Type  Inspection <h4><span class="badge bg-info-subtle text-info" style="width:100%">@Model[0].Stage</span> </h4></h4>
                </div>
                <div class="card-body">
                    <table id="alternative-pagination" class="table nowrap dt-responsive align-middle table-hover table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>Sr No</th>
                                <th>Inspection Date</th>
                                <th>JobNo</th>
                                <th>PartNo</th>
                                <th>QTY</th>
                                <th>Inspection Type</th>
                                <th>Redirect Inward</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => Count)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Inward_Date)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Inward_Time)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PartNum)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.JobNum)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.qty)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Inspection_Type)
                                        </td>
                                        <td>
                                            @Html.ActionLink("History", "PartHistory", "Home", new { jobnum = item.JobNum , id = item.ID , type= item.Inspection_Type}, new { @class = "btn btn-sm btn-primary " })
                                        </td>
                                    </tr>

                                    Count++;
                                }
                            }

                        </tbody>
                    </table>
                </div>
            }
            else
            {

            }
        </div>
    </div>
</div>

@section scripts{
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.9/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="~/Content/assets/js/pages/datatables.init.js"></script>
    <script src="~/Content/assets/js/app.js"></script>
}

