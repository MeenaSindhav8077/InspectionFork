@model Inspection.Web.Models.MainInwardModel
@{
    ViewBag.Title = "PartHistory";
}

<h2>PartHistory</h2>
@section styles{
    <link href="~/Content/assets/libs/swiper/swiper-bundle.min.css" rel="stylesheet" type="text/css" />
}
<div class="row mt-4">
    <div class="col-lg-12">
        <div>
            @if (Model != null && Model._INWARD != null)
            {
                <div class="card">
                    <div class="card-body">
                        <div class="live-preview">
                            <div class="row gy-4">
                                <div class="col-xxl-3 col-md-6">
                                    <div>
                                        <label>Job No</label>
                                        @Html.TextBoxFor(model => model._INWARD.JobNo, new { @disabled = "disabled", @class = "aspNetDisabled form-control job-input alert alert-success" })
                                    </div>
                                </div>
                                <div class="col-xxl-3 col-md-6">
                                    <div>
                                        <label>Part No</label>
                                        @Html.TextBoxFor(model => model._INWARD.Partno, new { @disabled = "disabled", @class = "aspNetDisabled form-control alert alert-success" })
                                    </div>
                                </div>
                                <div class="col-xxl-3 col-md-6">
                                    <div>
                                        <label>Inspection Type</label>
                                        @Html.TextBoxFor(model => model._INWARD.InspectionType, new { @disabled = "disabled", @class = "aspNetDisabled form-control alert alert-success" })
                                    </div>
                                </div>
                                <div class="col-xxl-3 col-md-6">
                                    <div>
                                        <label>Stage</label>
                                        @Html.TextBoxFor(model => model._INWARD.ProcessStage, new { @disabled = "disabled", @class = "aspNetDisabled form-control alert alert-success" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="horizontal-timeline my-3">
                    <div class="swiper timelineSlider">
                        <div class="swiper-wrapper">
                            <div class="swiper-slide">
                                <div class="card pt-2 border-0 item-box text-center">
                                    <div class="timeline-content p-3 rounded">
                                        <div>
                                            <p class="text-muted mb-0">@Model._INWARD.JobNo</p>
                                            <h6 class="fs-15 mb-0">@Model._INWARD.ProcessStage</h6>
                                        </div>
                                    </div>
                                    @{
                                        string date = Model._INWARD.InwardDate.ToString();
                                        string[] _date = date.Split(' ');
                                    }
                                    <div class="time"><span class="badge bg-success">@_date[0] , @Model._INWARD.InwardTime </span></div>
                                </div>
                            </div>
                            @if (Model._INWARDListdata.Count > 0)
                            {
                                foreach (var items in Model._INWARDListdata)
                                {
                                    <div class="swiper-slide">
                                        <div class="card pt-2 border-0 item-box text-center">
                                            <div class="timeline-content p-3 rounded">
                                                <div>
                                                    <p class="text-muted mb-1">@Model._INWARD.JobNo</p>
                                                    <h6 class="fs-15 mb-0">@items.ProcessStage</h6>
                                                </div>
                                            </div>
                                            <div class="time"><span class="badge bg-success">@items.InwardTime </span></div>
                                        </div>
                                    </div>
                                }
                            }
                            @if (Model._submodel != null)
                            {
                                if (Model._submodel.Count > 0)
                                {
                                    foreach (var item in Model._submodel)
                                    {
                                        <div class="swiper-slide">
                                            <div class="card pt-2 border-0 item-box text-center">
                                                <div class="timeline-content p-3 rounded">
                                                    <div>
                                                        <p class="text-muted mb-1">@Model._INWARD.JobNo</p>
                                                        <h6 class="fs-15 mb-0">@item.Stage</h6>
                                                    </div>
                                                </div>
                                                <div class="time"><span class="badge bg-success">@item.StartTime , @item.StartTime</span></div>
                                            </div>
                                        </div>
                                    }
                                }
                            }


                        </div>
                        <div class="swiper-button-next"></div>
                        <div class="swiper-button-prev"></div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Content/assets/libs/swiper/swiper-bundle.min.js"></script>

    <script src="~/Content/assets/js/pages/timeline.init.js"></script>

    <script src="~/Content/assets/js/app.js"></script>
    }




